<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.view.auth.driver.carNumb.AuthDriverCarNumbFragment">

    <TextView
        android:id="@+id/carNumbText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_car_numb"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/contrastTextColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/carNumbCard"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:backgroundTint="@color/colorThemeGreen"
        app:cardCornerRadius="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carNumbText">

        <EditText
            android:id="@+id/carNumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textStyle="bold"
            android:inputType="textCapCharacters"
            android:background="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:foregroundTint="@android:color/white"
            android:textSize="14sp"
            android:textColor="@color/notContrastTextColor"/>

    </androidx.cardview.widget.CardView>



    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/car_numb_need_for"
        android:textColor="@color/notContrastTextColor"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carNumbCard" />

    <RelativeLayout
        android:id="@+id/mainButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/button_horizontal_margin"
        android:layout_marginEnd="@dimen/button_horizontal_margin"
        android:layout_marginBottom="@dimen/default_bottom_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/arrow_stroke_bg">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/arrow_overlay"/>

        <TextView
            android:id="@+id/main_btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/con_tinue"
            android:textColor="@color/colorThemeGreen"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/arrow_bg"
            android:padding="4dp"
            android:src="@drawable/arrow_forward_black_24dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>