<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/add_data_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/back_btn_geo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:text="@string/add_geo_data"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/markers"
        android:src="@drawable/img_for_geo_data_fragment"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_data_field"
        android:layout_marginTop="64dp"
        android:layout_width="136dp"
        android:layout_height="104dp"
        />

    <TextView
        android:id="@+id/hint_geo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/geo_hint"
        android:layout_below="@id/markers"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textAppearance="@style/sms_"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp" />

    <RelativeLayout
        android:id="@+id/main_button_add_geo"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/arrow_stroke_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="34dp"
        >
        <TextView
            android:id="@+id/main_btn_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:layout_margin="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/arrow_overlay"
            android:text="@string/allow"
            android:textAppearance="@style/start"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/arrow_bg"
            android:padding="4dp"
            android:src="@drawable/arrow_forward_black_24dp" />
    </RelativeLayout>

</RelativeLayout>


