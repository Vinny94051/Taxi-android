<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/arrow_stroke_bg"
    tools:context=".presentation.view.auth.driver.AuthDriverMainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/arrow_overlay" />

    <TextView
        android:id="@+id/main_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/default_margin"
        android:text="@string/con_tinue"
        android:textColor="@color/colorThemeGreen"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/arrow_bg"
        android:padding="4dp"
        android:src="@drawable/arrow_forward_black_24dp" />
</RelativeLayout>