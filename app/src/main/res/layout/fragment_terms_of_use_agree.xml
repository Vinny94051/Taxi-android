<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/terms_of_use_agree_back">

    <RelativeLayout
        android:id="@+id/rectangle_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_button_tou_agree"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:paddingBottom="32dp"
        android:background="@drawable/rectangle_4"
        android:elevation="16dp">

        <TextView
            android:id="@+id/high"
            android:layout_width="316dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            android:layout_marginStart="6dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="6dp"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="1sp"
            android:text="@string/agree_terms_of_use_high"
            android:textAppearance="@style/auth_high"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="303dp"
            android:layout_height="80dp"
            android:layout_below="@id/high"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="13dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_margin"
            android:text="@string/tou_accept"
            android:textAlignment="textStart"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_button_tou_agree"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/arrow_stroke_bg">

        <TextView
            android:id="@+id/main_btn_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/arrow_overlay"
            android:paddingStart="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:text="@string/next"
            android:textAppearance="@style/start"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/arrow_bg"
            android:padding="4dp"
            android:src="@drawable/arrow_forward_black_24dp" />
    </RelativeLayout>
</RelativeLayout>