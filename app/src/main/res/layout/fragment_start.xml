<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rectangle_3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-16dp"
        android:background="@android:color/white"
        android:translationZ="210dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="32dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_margin="8dp"
            android:src="@drawable/logo_taxi" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/rectangle_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:background="@drawable/rectangle_3"
        android:elevation="16dp">

        <TextView
            android:id="@+id/high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="1sp"
            android:text="@string/auth_high"
            android:textAppearance="@style/AccentText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/first_text"
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:layout_below="@id/high"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4sp"
            android:text="@string/first_text"
            android:textAppearance="@style/RegularText" />

        <TextView
            android:id="@+id/second_text"
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:layout_below="@id/first_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4sp"
            android:text="@string/second_text"
            android:textAppearance="@style/RegularText" />

        <TextView
            android:id="@+id/third_text"
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:layout_below="@id/second_text"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4sp"
            android:text="@string/third_text"
            android:textAppearance="@style/RegularText" />


        <include
            android:id="@+id/main_button"
            layout="@layout/gradient_button"
            android:layout_width="292dp"
            android:layout_height="48dp"
            android:layout_below="@id/third_text"
            android:layout_marginStart="37dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="32dp" />
    </RelativeLayout>

</RelativeLayout>

