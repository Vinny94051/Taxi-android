<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.driver.driverOrders.DriverOrderFragment">

    <ImageButton
        android:id="@+id/burgerButton"
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/burger_menu_btn"
        android:paddingEnd="12dp"
        android:src="@drawable/ic_menu_black_24dp"
        android:translationZ="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:showText="true"
        android:textOff="Занят"
        android:textOn="Свободен"
        app:layout_constraintBottom_toBottomOf="@+id/burgerButton"
        app:layout_constraintEnd_toStartOf="@+id/settingsButton"
        app:layout_constraintStart_toEndOf="@+id/burgerButton"
        app:layout_constraintTop_toTopOf="@+id/burgerButton" />

    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="@dimen/medium_margin"
        android:src="@drawable/ic_settings_gear"
        android:translationZ="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/large_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/burger_menu_main" />



</androidx.constraintlayout.widget.ConstraintLayout>