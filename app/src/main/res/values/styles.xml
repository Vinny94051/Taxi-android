<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="auth_high">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#00AA7E</item>

    </style>

    <style name="first_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="second_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="third_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="start">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#00AA7E</item>
    </style>

    <style name="sms_">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="location_field">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="button_for_order">
        <item name="android:textSize">12sp</item>
        <item name="android:color">@android:color/white</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AccentText" >
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/colorTextAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContrastFieldText" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RegularText">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="EditTextStyle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SecondaryText" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/notContrastTextColor</item>
    </style>
</resources>
